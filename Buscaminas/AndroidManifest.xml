<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buscaminas"
    android:versionCode="1"
    android:versionName="1.0" 
    android:screenOrientation="landscape"
	android:configChanges="orientation"
    >
	
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/terminator_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.buscaminas.Splash_Screen_Inicio"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
			android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.buscaminas.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
			android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.example.buscaminas.Inicio"
            android:label="@string/title_activity_inicio" 
            android:screenOrientation="landscape"
			android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.example.buscaminas.AcercaDe"
            android:label="@string/title_activity_acerca_de" 
            android:screenOrientation="landscape"
			android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.example.buscaminas.TopJugadores"
            android:label="@string/title_activity_top_jugadores" 
            android:screenOrientation="landscape"
			android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.example.buscaminas.DragAndDrop"
            android:label="@string/title_activity_drag_and_drop" >
        </activity>
    </application>

</manifest>
